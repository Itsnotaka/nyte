{
  "$schema": "../node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "nextjs",
    "typescript",
    "oxc",
    "import",
    "promise",
    "react",
    "react-perf"
  ],
  "settings": {
    "next": {
      "rootDir": ["apps/web"]
    }
  },
  "rules": {
    "no-var": "error",
    "prefer-const": "error"
  },
  "ignorePatterns": [
    "stylelint.config.mjs",
    "node_modules/**",
    ".vercel/**",
    ".next/**",
    "out/**",
    ".pi/**",
    "apps/web/convex/_generated/**",
    "apps/web/convex/betterAuth/_generated/**"
  ],
  "env": {
    "builtin": true
  }
}
