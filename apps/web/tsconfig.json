{
  "extends": "@nyte/tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "~/*": ["./*", "../../packages/ui/~/*", "../../packages/ui/src/*"],
      "@nyte/ui/*": ["../../packages/ui/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "next.config.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
