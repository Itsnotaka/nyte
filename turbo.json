{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": ["apps/web/.env*"],
  "globalEnv": [
    "NEXT_PUBLIC_SERVER_URL",
    "OPENCODE_API_KEY",
    "PI_RUNTIME_MODEL",
    "CENTRAL_LICENSE_KEY"
  ],
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**"]
    },
    "typecheck": {
      "dependsOn": ["transit"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    }
  }
}
